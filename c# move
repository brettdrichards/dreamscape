using UnityEngine;
using System.Collections;

public class BoxMove : MonoBehaviour {

	public GameObject player;
	public float jumpSpeed;
	public float speed;
	public float maxSpeed;


	// Use this for initialization
	void Start () {
	
	}
	
	// Update is called once per frame
	void FixedUpdate () {
		if (Input.GetAxis ("Horizontal") > 0 && player.rigidbody2D.velocity.x < maxSpeed) {
			player.rigidbody2D.AddForce (Vector2.right*speed);
		}
		if (Input.GetAxis ("Horizontal") < 0 && player.rigidbody2D.velocity.x > -maxSpeed) {
			player.rigidbody2D.AddForce (Vector2.right*speed*-1);
		}

		if (Input.GetAxis ("Vertical") > 0 && player.rigidbody2D.velocity.y == 0) {
			player.rigidbody2D.AddForce (Vector2.up*jumpSpeed);
		}

	}

}
